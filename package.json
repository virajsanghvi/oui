{
  "name": "@virajsanghvi/oui",
  "description": "shadcn-based OpenSearch UI Component Library",
  "version": "2.0.1",
  "license": "Apache-2.0",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./style.css": {
      "default": "./dist/style.css"
    }
  },
  "files": [
    "dist/**/*"
  ],
  "engines": {
    "node": ">=20"
  },
  "docker_image": "node:10",
  "sideEffects": [
    "*.css",
    "*.scss"
  ],
  "scripts": {
    "clean": "rm -rf build node_modules dist lib",
    "prebuild": "mkdir -p dist",
    "build": "yarn run build:lib && yarn run build:storybook",
    "build:lib": "tsc && tsc-alias && npx @tailwindcss/cli -i src/styles/preset.css -o dist/style.css",
    "build:storybook": "storybook build -o ./build/storybook",
    "watch": "tsc -w",
    "prepublishOnly": "yarn run build && yarn run test",
    "test": "jest --collectCoverage --collectCoverageFrom=src/**/*.{ts,js} --passWithNoTests",
    "start": "storybook dev -p 8030 --no-open"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/virajsanghvi/oui.git"
  },
  "resolutions": {},
  "pre-commit": [
    "lint"
  ],
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-aspect-ratio": "^1.1.8",
    "@radix-ui/react-avatar": "^1.1.11",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-context-menu": "^2.2.16",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-hover-card": "^1.1.15",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-menubar": "^1.1.16",
    "@radix-ui/react-navigation-menu": "^1.2.14",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-progress": "^1.1.8",
    "@radix-ui/react-radio-group": "^1.3.8",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toggle": "^1.1.10",
    "@radix-ui/react-toggle-group": "^1.1.11",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@storybook/addon-a11y": "^9.1.8",
    "@storybook/addon-links": "^9.1.8",
    "@storybook/react-vite": "^9.1.8",
    "@tailwindcss/cli": "^4.1.13",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "date-fns": "^4.1.0",
    "embla-carousel-react": "^8.6.0",
    "input-otp": "^1.4.2",
    "lucide-react": "^0.555.0",
    "next-themes": "^0.4.6",
    "react-day-picker": "^9.11.3",
    "react-hook-form": "^7.67.0",
    "react-resizable-panels": "^3.0.6",
    "recharts": "^2.15.4",
    "sonner": "^2.0.7",
    "storybook": "^9.1.8",
    "tailwind-merge": "^3.3.1",
    "tw-animate-css": "^1.3.8",
    "vaul": "^1.1.2",
    "vite": "^5.4.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@storybook/addon-docs": "^9.1.8",
    "@tailwindcss/postcss": "^4.1.13",
    "@tsconfig/node20": "^20.1.6",
    "@types/jest": "^29.5.12",
    "@types/react": "^19.0.7",
    "@types/react-dom": "^19.0.3",
    "autoprefixer": "^10.4.21",
    "glob": "^13.0.0",
    "jest": "^29.7.0",
    "postcss": "^8.5.6",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tailwindcss": "^4.1.13",
    "ts-jest": "^29.2.4",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.9.2"
  },
  "peerDependencies": {
    "@types/react": "*",
    "@types/react-dom": "*",
    "react": "^16.12 || ^17.0 || ^18.0 || ^19.0",
    "react-dom": "^16.12 || ^17.0 || ^18.0 || ^19.0"
  },
  "peerDependenciesMeta": {
    "@types/react": {
      "optional": true
    },
    "@types/react-dom": {
      "optional": true
    }
  }
}
